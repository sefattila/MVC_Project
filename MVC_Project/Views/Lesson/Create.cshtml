@using MVC_Project.Models.VMs.LessonVMs;
@model LessonCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container col-lg-3">
    <h1>Create</h1>
    <form asp-controller="Lesson" asp-action="Create">
        <table class="table">
            <tbody>
                <tr>
                    <th><label asp-for="Name"></label></th>
                    <td><input type="text" asp-for="Name" /></td>
                </tr>
                <tr>
                    <th><label asp-for="Credit"></label></th>
                    <td><input type="text" asp-for="Credit" /></td>
                </tr>
                <tr>
                    <td><button type="submit" class="btn btn-success">Add</button></td>
                </tr>
            </tbody>
        </table>
    </form>
</div>

